<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/DefaultMainLayoutContainer">
    <ViewFlipper android:id="@+id/ViewFlipper"
                 style="@style/DefaultMainLayoutContainer">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top|right"
                   android:src="@drawable/new_note_instruction"></ImageView>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <GridView android:id="@+id/gridview"
                      style="@style/DefaultGridView" android:layout_width="fill_parent"
                      android:layout_height="fill_parent" android:layout_alignParentLeft="false"
                      android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
                      android:layout_marginTop="0dp" android:layout_centerHorizontal="true"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sortSpinner" android:layout_gravity="center_horizontal|top" android:background="#423412"
                    android:padding="5dp" android:layout_alignParentLeft="false" android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </ViewFlipper>
</LinearLayout>

